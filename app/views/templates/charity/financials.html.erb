<div ng-controller="CharityCtrl">
  <%= render :partial => "templates/charitynav", :locals => {:tab => "financials"} %>

  <div class="content">
    <div class="content-padded" ng-if="charityData">
      <p>Total assets: {{ charityData.financial.total_assets }}</p>
      <p>Total expenditures: {{ charityData.financial.total_expenditures }}</p>
      <p>Total liabilities: {{ charityData.financial.total_liabilities }}</p>
      <p>Total revenue: {{ charityData.financial.total_revenue }}</p>
      <img ng-src="{{ charityData.chart_url }}" alt="Financials Breakdown" width="100%" />
    </div>

    <%= render :partial => "templates/charityloading" %>
  </div>
</div>
